<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="create-table-cars"
               author="Katerina Yaroshevich">

        <createTable tableName="cars">
            <column autoIncrement="true"
                    name="id"
                    type="BIGINT">
                <constraints nullable="false"
                             primaryKey="true"
                             primaryKeyName="pk_cars"/>
            </column>
            <column name="model"
                    type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="brand"
                    type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="year"
                    type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="price"
                    type="DOUBLE"/>
            <column name="category_id"
                    type="BIGINT">
                <constraints foreignKeyName="fk_cars_category_id"
                             referencedColumnNames="id"
                             referencedTableName="categories"
                             nullable="false"/>
            </column>
            <column name="car_showroom_id"
                    type="BIGINT">
                <constraints foreignKeyName="fk_cars_car_showroom_id"
                             referencedColumnNames="id"
                             referencedTableName="car_showrooms"
                             nullable="true"/>
            </column>

        </createTable>

    </changeSet>

</databaseChangeLog>